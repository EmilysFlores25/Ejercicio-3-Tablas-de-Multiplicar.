<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Analisis1.Ejercicio4PagoSemanal"
             Title="Ejercicio4PagoSemanal">
    <VerticalStackLayout
     Padding="30,0"
     Spacing="25">

        <Image
         Source="sueldo.jpg"
         HeightRequest="185"
         Aspect="AspectFit" />

        <Label
         Text=" ---° Sueldo Semanal °--- "
         VerticalOptions="Center"
         HorizontalOptions="Center"/>

        <Entry x:Name="Entry1" Placeholder="Introduce las horas trabajadas"></Entry>
        <Entry x:Name="Entry2" Placeholder="Introduce el pago por horas trabajadas"></Entry>
        <Entry x:Name="Entry3" Placeholder="El suledo semanal de un trabajador es: "></Entry>

        <Button
         x:Name="CounterBtn"
         Text="Calcular sueldo." 
         SemanticProperties.Hint="Counts the number of times you click"
         Clicked="CounterBtn_Clicked_1"
         HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>